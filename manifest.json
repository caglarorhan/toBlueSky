{
    "manifest_version": 3,
    "name": "toBlueSky",
    "short_name": "toBlueSky",
    "version": "2024.0.2",
    "description": "Redirects ANY visit to twitter.com or x.com to bluesky.com.",
    "icons": {
        "16": "./img/icon_16.png",
        "32": "./img/icon_32.png",
        "48": "./img/icon_48.png",
        "128": "./img/icon_128.png"
      },
    "permissions": ["declarativeNetRequest", "storage", "tabs"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "./img/icon_16.png",
        "32": "./img/icon_32.png",
        "48": "./img/icon_48.png",
        "128": "./img/icon_128.png"
      }
    },
    "declarative_net_request": {
      "rule_resources": [{
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }]
    },
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["popup.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }